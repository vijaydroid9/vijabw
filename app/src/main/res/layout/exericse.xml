<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0b1633">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="4.5"
        android:background="#fff"
        android:layout_height="match_parent">
   <ImageView
       android:id="@+id/image_exerciseinstruction"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:src="@drawable/a1"
       />
        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="5.5"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/text_instructionshortdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:text="Do 25 Seconds"/>

    <Button
        android:id="@+id/button_exerciseinstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textColor="#000"
        android:background="@drawable/btn_bg"
        android:text="Instructions"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="15dp"
            android:id="@+id/progressBar"
            android:progressDrawable="@drawable/custom_progressbar"
            android:max="60"
            android:indeterminate="false"
            android:progress="0"
             />

        <Button
        android:id="@+id/button_ready"
        android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:textColor="#000"
        android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
        android:text="Next"/>
        </LinearLayout>
</LinearLayout>